@model Model.ViewModel.OrderDetailsView
@{
    Layout = "~/Views/Shared/Layout1.cshtml";
}
<h2 style="color:red">订单详情</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>商品名</td>
            <td>商品价格</td>
            <td>购买数量</td>
            <td>小计</td>
            <td>操作</td>
        </tr>
    </thead>
    <tbody>
       
            <tr class="active">
                <td>@Model.OrderDetail.pname</td>
                <td>@Model.OrderDetail.p_price</td>
                <td>@Model.OrderDetail.pnum</td>
                <td>@Model.OrderDetail.subtotal</td>
                <td><a href="@Url.Action("Index","UEditor",new { id=Model.OrderDetail.Pid})">去评价</a></td>
            </tr>
        
    </tbody>
</table>
<div class="container">
   
    <div class="row form-group">
        <label class="control-label col-lg-1" for="name">订单号</label>
        <div class="col-lg-5 col-md-6">
            <span id="CusName">@Model.Orders.orderId</span>

        </div>
    </div>
    <div class="row form-group">
        <label class="control-label col-lg-1" for="name">订单状态</label>

        <div class="col-lg-5 col-md-6">
            <span id="CusAdress">@Model.Orders.orderState</span>

        </div>
    </div>
    <div class="row form-group">
        <label class="control-label col-lg-1" for="name">订单创建时间</label>
        <span id="CusTel">@Model.Orders.CreateTime</span>

    </div>
    </div>