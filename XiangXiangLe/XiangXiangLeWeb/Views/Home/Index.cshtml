@using Model
@model Model.ViewModel.IndexView
@{
    ViewBag.Title = "乡乡乐";
   
}


<style>
    .ui-conLeft {
        width: 100%;
        margin: 30px auto;
        
    }

    .ui-hotVisa {
        width: 100%;
        margin-bottom: 40px;
    }

    .ui-hotVisa-head {
        width: 100%;
        height: 50px;
        box-sizing: border-box;
        border-bottom: 2px solid #f06000;
        margin-bottom: 15px;
    }

    .icon-hotvisa {
        background: #f06000;
        display: inline-block;
        font-size: 0;
        height: 22px;
        line-height: 0;
        margin: 0px 10px 0 0;
        width: 5px;
        vertical-align: -3px;
    }

    .ui-conLeft h2 {
        font-size: 28px;
        color: #FF7800;
        margin-left: 4px;
        display: inline-block;
    }

    .ui-hotVisa-head p {
        display: inline-block;
        font-size: 14px;
        color: #999;
        margin-left: 13px;
    }

    .ui-hotVisa-prolist {
        width: 979px;
        margin-left: -19px;
        background-color: #9e9e9e;
    }

    .J_hot-proList {
        width: 23%;
        height: 320px;
        position: relative;
        float: left;
        margin-top: 12px;
        margin-left: 19px;
        overflow: hidden;
    }

        .J_hot-proList:hover .ui-proCover {
            top: 0%;
            background-color: rgba(0,0,0,0.5);
            transition: all 0.5s ease-in-out;
            -webkit-transition: all 0.5s ease-in-out;
            -o-transition: all 0.5s ease-in-out;
            -moz-transition: all 0.5s ease-in-out;
            cursor: pointer;
        }

    .ui-hotVisa-proList img {
        width: 225px;
        height: 320px;
        display: block;
    }

    .ui-proCover {
        width: 100%;
        height: 100%;
        top: 54%;
        z-index: 1001;
        background-color: transparent;
        transition: all 0.5s ease-in-out;
        -webkit-transition: all 0.5s ease-in-out;
        -o-transition: all 0.5s ease-in-out;
        -moz-transition: all 0.5s ease-in-out;
    }

    /*.ui-proCover:hover {
        top: 0%;
        background-color: rgba(0,0,0,0.5);
        transition: all 0.5s ease-in-out;
        -webkit-transition: all 0.5s ease-in-out;
        -o-transition: all 0.5s ease-in-out;
        -moz-transition: all 0.5s ease-in-out;
        cursor: pointer;
    }*/

    .ui-proCover, .ui-proCover-active, .ui-proInfos {
        position: absolute;
    }

        .ui-proCover a {
            width: 100%;
            height: 100%;
            display: inline-block;
            z-index: 1001;
        }

    .ui-cover {
        width: 201px;
        height: 88px;
        margin-left: 12px;
        position: relative;
        top: 40px;
        background: rgba(255, 255, 255,0.6);
    }

    .ui-coverInfos {
        width: 193px;
        height: 80px;
        margin-left: 4px;
        position: relative;
        top: 4px;
        background: rgba(255, 255, 255,0.7);
    }

    .ui-coverInfo-head {
        width: 184px;
        height: 49px;
        margin: 0px auto;
    }

    .ui-coverInfo-head, .ui-proInfo-head {
        border-bottom: 1px solid #666;
        box-sizing: border-box;
    }

        .ui-coverInfo-head p {
            font-size: 26px;
            font-weight: 700;
            color: #000;
            text-align: center;
            line-height: 46px;
        }

    .ui-coverInfo-foot {
        font-style: inherit;
        width: 155px;
        height: 31px;
        margin: 0px auto;
        line-height: 31px;
        text-align: center;
    }

        .ui-coverInfo-foot p {
            font-size: 14px;
            color: #333;
            float: left;
        }

    .coverInfo-icon {
        font-size: 14px;
        margin-top: 2px;
    }

    .coverInfo-icon, .coverInfo-price {
        color: #FF7800;
        float: left;
        font-weight: 700;
        margin-left: 2px;
    }

    .coverInfo-price {
        font-size: 20px;
    }

    .coverInfo-qi {
        font-size: 14px;
        font-weight: 700;
        color: #999;
        vertical-align: middle;
        margin-left: 2px;
    }

    .ui-coverInfo-foot i {
        float: right;
        font-size: 14px;
        color: #333;
    }

    .ui-satisfaction {
        color: #FFF;
        margin: 0px auto;
        text-align: center;
        padding-top: 35px;
    }

        .ui-satisfaction em {
            font-style: normal;
            font-size: 14px;
        }

    .ui-proBtn {
        width: 130px;
        height: 34px;
        background-color: #FF7800;
        border-radius: 2px;
        font-size: 18px;
        text-align: center;
        line-height: 34px;
        display: block;
        margin: 75px auto 0px;
        cursor: pointer;
        color: #fff;
        margin-bottom: 5px;
    }
</style>

<section id="floot">
    <div class="container">
        <div class="col-md-10">
            <div class="content-left">
                <div class="ui-conLeft">
                    <div class="ui-hotVisa">

                        <div class="ui-hotVisa-head">
                            <i class="icon-hotvisa"></i>
                            <h2>新鲜水果</h2>
                            <p>优惠福利来一波</p>
                        </div>
                        <div class="ui-hotVisa-prolist" id="con1">
                            @foreach (var p in Model.Product1)
                        {

                            <div class="J_hot-proList" id="con2">

                               @if (@p.pcategoryId < 30)
    {
                            <img src="~/Content/ProductImages/@p.pUrl" />
}
             
           
                            <img src="@p.pUrl" />
                     
                                <div class="ui-proCover J_proCover-active" id="con3">
                                    <a href="@Url.Action("Details","Product", new { id = p.productId})">
                                        <div class="ui-cover">
                                            <div class="ui-coverInfos">
                                                <div class="ui-coverInfo-head">
                                                    <p>@p.pname</p>
                                                </div>
                                                <div class="ui-coverInfo-foot">
                                                    <p>
                                                        <em class="coverInfo-icon">￥</em>
                                                        <em class="coverInfo-price">@p.price</em>
                                                        <em class="coverInfo-qi">起</em>
                                                    </p>
                                                    <i>@Model.Categories1.CategotyName</i>
                                                </div>
                                            </div>
                                            <p class="ui-satisfaction">
                                                ——— <em>@DateTime.Now.Day</em> ———
                                            </p>
                                            <span class="ui-proBtn">立即抢购</span>
                                        </div>
                                    </a>

                                </div>
                            </div>

                    }

                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2" style="margin-top:20px;">
            <h2 class="h2"style="color:burlywood">最新上架</h2>
            <ul class="list-group" style="float:right;right:0px;">
                @foreach (var u in Model.Product4)
          {
            <li class="list-group-item">
                <a href="@Url.Action("Details","Product",new {id=u.productId })">
                    @u.pname;
                </a>
            </li>
}
            </ul>
        </div>
    </div>
</section>

<section id="floor">
    <div class="container">
        <div class="col-md-10">
            <div class="content-left">
                <div class="ui-conLeft">
                    <div class="ui-hotVisa">

                        <div class="ui-hotVisa-head">
                            <i class="icon-hotvisa"></i>
                            <h2>苗木花卉</h2>
                            <p>优惠福利来一波</p>
                        </div>
                        <div class="ui-hotVisa-prolist" id="con1">
                            @foreach (var p in Model.Product2)
                            {
                            <div class="J_hot-proList" id="con2">
                                @{
                                    <img src="~/Content/ProductImages/@p.pUrl" />
                                }
                                <div class="ui-proCover J_proCover-active" id="con3">
