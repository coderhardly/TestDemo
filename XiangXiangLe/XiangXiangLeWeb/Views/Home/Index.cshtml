                                        <div class="ui-cover">
                                            <div class="ui-coverInfos">
                                                <div class="ui-coverInfo-head">
                                                    <p>@p.pname</p>
                                                </div>
                                                <div class="ui-coverInfo-foot">
                                                    <p>
                                                        <em class="coverInfo-icon">￥</em>
                                                        <em class="coverInfo-price">@p.price</em>
                                                        <em class="coverInfo-qi">起</em>
                                                    </p>
                                                    @*<i>@Model.Categories3.CategotyName</i>*@
                                                </div>
                                            </div>
                                            <p class="ui-satisfaction">
                                                ——— <em>@DateTime.Now.Day</em> ———
                                            </p>
                                            <span class="ui-proBtn">立即抢购</span>
                                        </div>
                                    </a>

                                </div>
                            </div>

            }

                        </div>

                    </div>
                </div>
            </div>
           
        </div>
        <div class="col-md-2" style="margin-top:20px;">
            <h2 style="color:burlywood">热销排行</h2>
            <ul class="list-group" style="float:right;right:0px;">
                @foreach(var u in Model.Product3)
                {
                   <li class="list-group-item">
                       <a href="@Url.Action("Details","Product",new {id=u.productId })">
                          @u.pname;
                       </a>
               </li>
                }
            </ul>
        </div>
        </div>
</section>
