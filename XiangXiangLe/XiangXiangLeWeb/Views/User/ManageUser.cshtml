@model IEnumerable<Model.Users>
    @{ 
        Layout = null;
    }
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<table class="table table-hover">
    <thead>
        <tr>
            <td>用户id</td>
            <td>用户名</td>
            <td>手机号</td>
            <td>操作</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
    {
        <tr>
            <td>@item.userId</td>
            <td>@item.uName</td>
            <td>@item.telphone</td>
            <td>@Html.ActionLink("封禁","Forbid","User",new {Id=@item.userId },"")</td>
            <td></td>
        </tr>
}

    </tbody>
</table>
